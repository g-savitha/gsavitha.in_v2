---
import Layout from '../layouts/Layout.astro';
import JobCard from '../components/JobCard.astro';
import { jobs } from '../data/jobs';
import { recommendations } from '../data/recommendations';

// Sort jobs by start year descending if needed, or rely on array order.
// jobs are already in order.
---

<Layout title="Work Experience | Savitha">
    <div class="max-w-6xl mx-auto
px-4">
        <h1
            class="text-5xl md:text-6xl font-bold mb-20 text-center
font-comic-heading text-black uppercase tracking-wide"
        >
            MY SAGA
        </h1>
        {
            /*
Timeline Container */
        }
        {/* Latest Comics (Work Experience) Container */}
        <div class="space-y-24 relative">
            {jobs.map((job, index) => <JobCard job={job} index={index} />)}
        </div>
        <div class="mt-32">
            <h2
                class="text-5xl font-bold
mb-12 text-center font-comic-heading uppercase"
            >
                Kind Words
            </h2>
            <div class="md:columns-2 gap-8 space-y-8">
                {
                    recommendations.map((rec) => (
                        <div class="comic-panel break-inside-avoid">
                            {' '}
                            <div
                                class="text-6xl text-primary/20
absolute top-2 left-4 font-comic-heading"
                            >
                                "
                            </div>{' '}
                            <p
                                class="text-lg text-black
italic mb-6 relative z-10 leading-loose whitespace-pre-line font-comic-body"
                            >
                                {rec.text}{' '}
                            </p>{' '}
                            <div
                                class="flex items-center gap-4 mt-auto border-t-2
border-black pt-4"
                            >
                                {' '}
                                {/* Author Initial Avatar if image not used in this view, or
we could use the image if we wanted to upgrade this match Recommendations.astro
*/}{' '}
                                <div
                                    class="w-12 h-12 rounded-full bg-accent border-[3px] border-black flex
items-center justify-center text-black font-bold shrink-0 font-comic-heading
text-xl"
                                >
                                    {' '}
                                    {rec.name[0]}{' '}
                                </div>{' '}
                                <div>
                                    {' '}
                                    <div
                                        class="font-bold text-black
font-comic-heading text-lg"
                                    >
                                        {rec.name}
                                    </div>{' '}
                                    <div
                                        class="text-sm text-black
font-bold"
                                    >
                                        {rec.role} @ {rec.company}
                                    </div>{' '}
                                </div>{' '}
                            </div>{' '}
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</Layout>
