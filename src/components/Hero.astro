<section class="min-h-[80vh] flex items-center justify-center relative overflow-hidden app-hero">
    <div class="absolute inset-0 bg-accent skew-y-3 transform origin-top-left -z-10 border-b-4 border-black"></div>
    
    <div class="max-w-6xl mx-auto px-4 grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        
        {/* Text Content */}
        <div class="order-2 md:order-1 relative">
             <div class="bg-white p-8 border-[4px] border-black shadow-[8px_8px_0_0_#000] rotate-[-1deg]">
                <h1 class="font-comic-heading text-6xl md:text-8xl leading-none mb-4 text-black text-shadow-comic">
                    HELLO
                    <br />
                    <span class="text-primary">WORLD!</span>
                </h1>
                <p class="font-comic-body text-xl md:text-2xl mb-8 font-bold text-text-muted">
                    I'm Savitha, a <span class="bg-yellow-300 px-1 border-2 border-black rotate-1 inline-block">Software Engineer</span> building digital experiences with a touch of fun.
                </p>
                <div class="flex gap-4">
                     <a href="#projects" class="comic-button text-2xl px-8 py-3 bg-secondary text-black hover:bg-secondary-hover">
                        See My Work
                     </a>
                     <a href="/blog" class="comic-button text-2xl px-8 py-3 bg-white text-black hover:bg-gray-100">
                        Read Blog
                     </a>
                </div>
             </div>
             {/* Speech Bubble Tail */}
             <div class="absolute -bottom-6 right-12 w-8 h-8 bg-white border-r-[4px] border-b-[4px] border-black rotate-45 transform"></div>
        </div>

        {/* Hero Image / Illustration */}
        <div class="order-1 md:order-2 flex justify-center relative">
            <div class="relative w-80 h-80 md:w-96 md:h-96">
                <div class="absolute inset-0 bg-primary/20 rounded-full border-[4px] border-black animate-blob"></div>
                <img 
                    src="/hero-avatar.svg" 
                    alt="Savitha Avatar" 
                    class="relative z-10 w-full h-full object-contain filter drop-shadow-[8px_8px_0_#000]"
                    onerror="this.src='https://api.dicebear.com/7.x/avataaars/svg?seed=Savitha&backgroundColor=transparent'"
                />
            </div>
            {/* Comic Bang Effect */}
            <div class="absolute top-0 right-0 font-comic-heading text-4xl text-black bg-white border-2 border-black px-4 py-1 rotate-12 shadow-[4px_4px_0_0_#000]">
                POW!
            </div>
        </div>
    </div>
</section>

<style>
    .text-shadow-comic {
        text-shadow: 4px 4px 0 #000;
    }
    @keyframes blob {
        0% { border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%; }
        50% { border-radius: 30% 60% 70% 40% / 50% 60% 30% 60%; }
        100% { border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%; }
    }
    .animate-blob {
        animation: blob 8s ease-in-out infinite;
    }
</style>
