---
import { ClientRouter } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Savitha's Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="min-h-screen flex flex-col bg-background text-text overflow-x-hidden selection:bg-primary/30 selection:text-white">
    <Header />
    <main class="flex-1 w-full max-w-5xl mx-auto px-4 py-8 sm:py-12">
        <slot />
    </main>
    <Footer />
  </body>
</html>
